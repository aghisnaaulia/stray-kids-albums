extends ../layout/base
block content
    section.content-header
        h1
            | Add New Data
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Please input a data!
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip', title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/customers/add')
                    .row

                        .col-xs-6
                            .box-body
                                if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Title
                                    input(type='text', name='name', placeholder='Input title here', autofocus, required).form-control
                                .form-group
                                    label
                                        | Version
                                    input(type='text', name='address', placeholder='Input version here', required).form-control
                                .box-footer
                                    button(type='submit').btn.btn-primary
                                        | Submit

                                    a(href='/customers').btn.btn-primary.pull-right
                                        | Back